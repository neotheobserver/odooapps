<odoo>
      <record id="project_view_form_inherit" model="ir.ui.view">
        <field name="name">project.view.form.inherit.mapping</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="development" widget="progressbar" force_save="1"/>
            </xpath>
        </field>
    </record>


    <record id="project_view_kanban_progress_inherit" model="ir.ui.view">
        <field name="name">project.view.kanban.progress.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="/kanban/templates/t/div" position="inside">
                <field name="development" widget="progressbar"/>
            </xpath>
        </field>
    </record>
</odoo>